<h1>
  <%= @chat.name %> <%= link_to "Edit", edit_chat_path%>
</h1>

<div class="col">
  <div class="chatCSS">
    <% @messages.each do |message| %>
    <div class="col">
      <p class="mb-1">
        <%= message.user.username%> : <%=message.msg %>
      </p>
      <div class="text-right">
        <small>
          <%= message.created_at %>
        </small>
      </div>
    </div>
    <% end %>
  </div>

  <%= simple_form_for @message, remote: true do |form| %>
  <div>
    <%= form.input :msg, as: :string,
    wrapper: false,
    label: false,
    input_html: {
     class: 'chat-input'
     } %>
     <div>
      <%= form.submit "Send", class: 'btn btn-primary chat-input' %>
    </div>
  </div>

  <%= form.input :chat_id, as: :hidden %>
  <% end %>
</div>
</div>